  "version": "2.0.0",
  "tasks": [
    {
      "label": "Stop backyard",
      "type": "shell",
      "command": "kill $(ps -ef | grep '[b]ackyard.py' | grep -v  ' -- ' | awk 'BEGIN {FS=\" \"}{ print $2 }' | sort | head -n 1)",
      "problemMatcher": []
    },
    {
      "label": "Coverage Report",
      "type": "shell",
      "command": "coverage report --data-file=${workspaceFolder}/platform_root/platform_backyard/.coverage",
      "problemMatcher": []
