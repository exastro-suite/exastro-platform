// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.231.6/containers/jekyll
{
	"name": "platform-backyard with ita - exastro-common-auth",
	"dockerComposeFile": [
		"../docker-compose.yml",
		"../docker-compose.devcontainer.yml",
		"../../../exastro-it-automation/.devcontainer/docker-compose.yml",
		"../platform-api-with-ita/docker-compose.with-ita.yaml"
	],
	"service": "platform-backyard",
	"customizations": {
		"vscode": {
			// Set *default* container specific settings.json values on container create.
			"settings": {
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash",

				// git menu setting
				"git.allowNoVerifyCommit": true,

				// rest-client setting
				"rest-client.environmentVariables": {
					"$shared": {
						"sys-mng-port": "8001",
						"org-mng-port": "8000"
					}
				},
				
				// python extension setting
				"python.linting.pylintEnabled": false,
				"python.linting.flake8Enabled": true,

				"python.linting.lintOnSave": true,

				"python.linting.flake8Args": [
					"--ignore=W293, W504",
					"--max-line-length=150",
					"--max-complexity=20",
				],

				"python.formatting.provider": "autopep8",

				"python.formatting.autopep8Args": [
					"--aggressive", "--aggressive",
				],

				"python.testing.cwd": "${workspaceFolder}/platform_root/platform_backyard",
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.testing.pytestArgs": [
					"--cov=${workspaceFolder}/platform_root/platform_backyard/",
					"--cov-report=xml",
				],
				"python.testing.autoTestDiscoverOnSaveEnabled": true,
				"coverage-gutters.showGutterCoverage": false,
				"coverage-gutters.showLineCoverage": true,
				"coverage-gutters.showRulerCoverage": false,
				"coverage-gutters.coverageBaseDir": "platform_root/platform_backyard",
				"coverage-gutters.coverageReportFileName": "platform_root/platform_backyard/coverage.xml",
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"donjayamanne.python-extension-pack",
				"ms-python.vscode-pylance",
				"ms-ceintl.vscode-language-pack-ja",
				"ms-vscode.references-view",
				"eamodio.gitlens",
				"mhutchie.git-graph",
				"42crunch.vscode-openapi",
				"arjun.swagger-viewer",
				"redhat.vscode-yaml",
				"adisreyaj.swagger-snippets",
				"hediet.vscode-drawio",
				"oderwat.indent-rainbow",
				"aaron-bond.better-comments",
				//"sonarsource.sonarlint-vscode",
				"mechatroner.rainbow-csv",
				"ryu1kn.partial-diff",
				"pkief.material-icon-theme",
				//"rangav.vscode-thunder-client",
				//"mtxr.sqltools",
				//"mtxr.sqltools-driver-mysql",
				//"formulahendry.vscode-mysql",
				"mitchdenny.ecdc",
				"ms-vsliveshare.vsliveshare",
				"snyk-security.snyk-vulnerability-scanner",
				// "rapidapi.vscode-rapidapi-client",
				"humao.rest-client",
				"ryanluker.vscode-coverage-gutters",
			],
		},
	},
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "onCreateCommand":"sudo dnf install -y git vim diffutils bind-utils iputils && sudo pip3.9 install flake8 && sudo pip3.9 install autopep8",
	"postCreateCommand": "sudo chmod -R 777 /home/app_user/.vscode-server && sudo chmod 777 /home/app_user/.vscode-server-insiders",
	//"postAttachCommand": "httpd -k stop",
	"workspaceFolder": "/workspace",
	"overrideCommand": true,
}