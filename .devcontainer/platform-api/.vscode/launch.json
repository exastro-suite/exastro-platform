{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Python: Flask",
        "type": "python",
        "request": "launch",
        "program": "/app/platform_api.py",
        "env": {
            "FLASK_APP": "/app/platform_api.py",
            "FLASK_ENV": "development",
            "MOD_WSGI_DISABLE": "TRUE",
        },
        "cwd": "/app",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/platform_root/platform_api",
            "remoteRoot": "/app"
          }
        ],
        "noDebug": true,
        "args": [
            "run",
            "--no-debugger"
        ],
        "jinja": true,
        "justMyCode": true
      },
      {
        "name": "[DEBUG] Python: Flask",
        "type": "python",
        "request": "launch",
        "program": "/app/platform_api.py",
        "env": {
            "FLASK_APP": "/app/platform_api.py",
            "FLASK_ENV": "development",
            "MOD_WSGI_DISABLE": "TRUE",
        },
        "cwd": "/app",
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/platform_root/platform_api",
            "remoteRoot": "/app"
          }
        ],
        "args": [
            "run",
            "--no-debugger"
        ],
        "jinja": true,
        "justMyCode": true
      },
      {
        "name": "[DEBUG] Python: Flask (Attach)",
        "type": "python",
        "request": "attach",
        "connect": {
          "host": "localhost",
          "port": 5678
        },
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}/platform_root/platform_api",
            "remoteRoot": "/app"
          }
        ]
    },
  ]
}